<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_secondbackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/button03"
        android:layout_width="200dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:text="@string/button03_text"
        android:textSize="@dimen/text_textSize"
        android:layout_centerHorizontal="true"
        android:onClick="clickButton"
        android:background="@drawable/secondbackground"/>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="5dp"
        android:divider="#886600"
        android:layout_below="@+id/button03"
        android:dividerHeight="3dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button04"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_confirm"
            android:onClick="clickButton01" />
    </RelativeLayout>
</LinearLayout>



